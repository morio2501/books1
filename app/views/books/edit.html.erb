


<h1>Editing Book</h1>
	<%= form_for (@book) do |f| %>
		<%= f.label :Title %><br>
		<%=f.text_field :title %><br>
		<%= f.label :Body %><br>
		<%= f.text_area :body %><br>
		<%= f.submit 'Update Book' %>
	<% end %>

<p><%= link_to 'Show', book_path(@book.id)%>|<%= link_to 'Back', books_path%></p>